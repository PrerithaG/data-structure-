#include <stdio.h>

int main() {
    int arr[3] = {10, 20, 30};  // array
    int *p;

    p = arr;  // pointer to first element of array

    printf("Array elements using pointer:\n");

    for (int i = 0; i < 3; i++) {
        printf("%d ", *(p + i));  // accessing array using pointer
    }

    return 0;
}
